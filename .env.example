# notICE Server Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Your City/Region Information
# ===========================================

# Display name for your region
REGION_NAME="Idaho Falls, ID"

# Center coordinates for the map (get from Google Maps)
REGION_LAT=43.4926
REGION_LONG=-112.0401

# Default zoom level (14 is neighborhood level)
REGION_ZOOM=14

# ===========================================
# OPTIONAL: Telegram Notifications
# ===========================================
# If left blank, Telegram notifications are disabled

# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=

# Chat ID of your group/channel (negative number for groups)
TELEGRAM_CHAT_ID=
